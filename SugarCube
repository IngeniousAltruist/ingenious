    <title>HOYYY AIESEC</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            overflow: hidden;
            background-color: black;
            font-family: 'Poppins', sans-serif;
            color: #ffd13b;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            position: relative;
            padding: 0;
            box-sizing: border-box;
            text-align: center;
        }

        canvas {
            position: absolute;
            top: 0;
            left: 0;
        }

        .frame {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            white-space: nowrap;
            line-height: 1.5;
            font-weight: 700;
            z-index: 10;
            text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.8), -3px -3px 10px rgba(0, 0, 0, 0.8);
            margin: 10px;
            padding: 0 5%;
            box-sizing: border-box;
            max-width: 90%;
            max-height: 90%;
            overflow: hidden;
            font-size: 2vw;
        }

        .line {
            display: block;
            height: 1.5em;
        }

        iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
            object-fit: cover;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: -1;
        }
    </style>
